<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#DFD69B"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sample_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/name"
                android:textColor="#202020"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:id="@+id/delete_data"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_delete_"/>
        </LinearLayout>



        <ImageView
            android:id="@+id/sample_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="@string/sample_location"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sample_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Reflected Voltage :"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/VOLTAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Infrared Voltage :"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/InFRARED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Moisture Voltage :"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/MOISTURE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Sodium :"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sodium_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Calcium :"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/calcium_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Magesium"
                android:textColor="#202020"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/magesium_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:text="name"
                android:textColor="#202020"
                android:textSize="20sp" />


        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>